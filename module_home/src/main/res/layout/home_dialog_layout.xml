<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="请选择添加设备的方式"
        android:textColor="#333333"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">

        <com.punuo.sys.sdk.view.AdvancedTextView
            android:id="@+id/tv_saoma"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="扫码添加"
            android:textColor="#ff1940"
            android:textSize="16sp"
            android:textStyle="bold"
            app:border_color="#ff1940"
            app:border_radius="22dp"
            app:border_width="1px" />

        <com.punuo.sys.sdk.view.AdvancedTextView
            android:id="@+id/tv_shoudong"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="#ff1940"
            android:gravity="center"
            android:text="手动添加"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:border_radius="22dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/ic_delete_grey" />
</RelativeLayout>

