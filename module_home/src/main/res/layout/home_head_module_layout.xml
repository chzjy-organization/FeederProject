<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_bar"
        android:orientation="vertical"
        tools:layout_height="200dp" />

    <LinearLayout
        android:id="@+id/home_pet_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/header_container"
        android:orientation="horizontal"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#1C000000">

        <ImageView
            android:id="@+id/home_add_pet"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="right"
            android:padding="11dp"
            android:src="@drawable/home_ic_edit" />

        <TextView
            android:id="@+id/home_pet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/home_ads_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/header_container"
        android:orientation="vertical" >
        <com.youth.banner.Banner
            android:id="@+id/bander"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/device_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_ads_container"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/label_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/label_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="饮食报告"
            android:layout_gravity="center"
            android:textColor="#666666"
            android:textSize="14sp" />
        <Spinner
            android:id="@+id/space1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:entries="@array/home_spinner"
            android:theme="@style/spinner_style"
            />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/chart_container"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:layout_below="@+id/label_container"
            android:layout_margin="12dp"
            android:orientation="vertical" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_container"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="我的工具"
            android:textColor="#666666"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/feed_pet"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:src="@drawable/home_ic_tool_1"
                app:riv_corner_radius="6dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/care_pet"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:src="@drawable/home_ic_tool_2"
                app:riv_corner_radius="6dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>