<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/module_title_layout" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/feed_plan_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="喂食次数"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="喂食份数(份/10g)"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feed_plan_head"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/plan_sum"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/feed_count_sum"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="@color/black" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/black" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_editPlan"
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/time_select_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/date_select_frame"
                android:gravity="center"
                android:hint="选择时间"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/meal_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/date_select_frame"
                android:gravity="center"
                android:hint="输入餐名"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/less_plan_count"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="-"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/count_select"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/date_select_frame"
                android:gravity="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/add_plan_count"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="+"
                android:textSize="20sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/time_select"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <TimePicker
                android:id="@+id/time_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner" />

            <TextView
                android:id="@+id/time_sure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/time_picker"
                android:text="确认"
                android:textColor="#EEC900" />
        </RelativeLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/feed_green_circle_bg"
            android:text="完成"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>