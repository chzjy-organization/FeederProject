<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/module_title_layout"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/buy_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_bg_purchase_grain"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购粮"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/buy_image"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/date_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/time_buy"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/time_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/buy_complete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_bg_hook" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/feed_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_bg_feed_grain"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/text_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喂食"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/feed_image"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/date_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/time_feed"
            android:layout_marginRight="20dp"
            />

        <TextView
            android:id="@+id/time_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/feed_complete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_bg_hook" />

    </RelativeLayout>

</LinearLayout>