<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <include layout="@layout/module_title_layout"
        android:id="@+id/change_pwd_title"/>

    <com.punuo.sys.sdk.view.CleanEditText
        android:id="@+id/edit_new_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_below="@+id/change_pwd_title"
        android:background="@drawable/login_edit_bg"
        android:drawableRight="@drawable/ic_delete_grey"
        android:gravity="center_vertical"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColorHint="#999999"
        android:textSize="14sp" />

    <com.punuo.sys.sdk.view.CleanEditText
        android:id="@+id/edit_password_again"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/edit_new_password"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/login_edit_bg"
        android:drawableRight="@drawable/ic_delete_grey"
        android:gravity="center_vertical"
        android:hint="请再次输入新密码"
        android:inputType="textPassword"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:textColorHint="#999999"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/password_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="12dp"
        android:layout_below="@+id/edit_password_again"
        android:text="密码长度8-32位，须包含数字、字母、符号至少2种或以上元素"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/edit_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/edit_password_again"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/login_btn_bg"
        android:gravity="center"
        android:text="确认修改"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>